{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:all",
    ":dependencyDashboard",
    "schedule:weekly"
  ],
  "baseBranches": [
    "main"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchPackagePrefixes": [
        "androidx.compose.compiler",
        "com.google.devtools.ksp",
        "org.jetbrains.kotlin"
      ],
      "groupName": "kotlin"
    },
    {
      "matchPackageNames": ["org.xerial:sqlite-jdbc"],
      "allowedVersions": "<=3.18.0"
    },
    {
      "matchPackagePrefixes": ["cafe.adriel.lyricist"],
      "allowedVersions": "/^[0-9].[0-9].[0-9]$/"
    }
  ],
  "regexManagers": [
    {
      "description": "Update Compose compiler version",
      "fileMatch": [".toml$"],
      "matchStrings": [
        "compose-compiler = \"(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "androidx.compose.compiler:compiler",
      "datasourceTemplate": "gradle"
    }
  ]
}